<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">Admin Login</h1>
    <p class="lead">Account Management System</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 col-sm-12">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="form-group">
            <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-primary d-block m-auto px-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>